!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title engina manager
    = stylesheet_link_tag 'engine_manager/application', media: 'all'
    = javascript_include_tag 'engine_manager/application'
    = csrf_meta_tags
  %body.sb-admin2
    #wrapper
      %nav.navbar.navbar-inverse.navbar-fixed-top{:role => "navigation"}
        .navbar-header
          %button.navbar-toggle{"data-target" => ".navbar-ex1-collapse", "data-toggle" => "collapse", :type => "button"}
            %span.sr-only Toggle navigation
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar
          %a.navbar-brand{:href => root_path} engina manager
        %ul.nav.navbar-right.top-nav
          %li
            %a{:href => "#"}
              %i.fa.fa-user
              = current_user.try(:name).to_s
          %li
            = link_to root_url + 'auth/logout', method: :delete, data: {confirm: '你确定?'} do
              %i.fa.fa-fw.fa-power-off>
              登出
        = simple_navbar(:engine_manager, :mode => :bootstrap, class: 'navbar-ex1-collapse', ul_class: 'side-nav')
      #page-wrapper
        .container-fluid
          = yield
    = yield :js
